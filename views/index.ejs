<%- include('partials/header', { title: 'Home', user: user }) %>

<div class="container page-container">
    <h1>Movie Database</h1>
    <p>Welcome to our movie collection.</p>
    <p>Browse movies or register to add your own.</p>

    <% if (!user) { %>
        <div class="auth-buttons">
            <a href="/register" class="btn btn-primary">Register</a>
            <a href="/login" class="btn btn-primary">Login</a>
        </div>
    <% } else { %>
        <div class="dashboard-links">
            <a href="/movies/add" class="btn btn-primary">Add New Movie</a>
            <a href="/dashboard" class="btn btn-primary">My Dashboard</a>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
